{% extends 'base.html.twig' %}

{% block title %}Oficina index{% endblock %}

{% block body %}
    <h1>Oficina index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Oficina</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for oficina in oficinas %}
            <tr>
                <td>{{ oficina.id }}</td>
                <td>{{ oficina.oficina }}</td>
                <td>
                    <a href="{{ path('app_oficina_show', {'id': oficina.id}) }}">show</a>
                    <a href="{{ path('app_oficina_edit', {'id': oficina.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_oficina_new') }}">Create new</a>
{% endblock %}
